<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.downloadapp.videodownloadmaster.BrowserTabFragment">

    <!-- TODO: Update blank fragment layout -->
    <ProgressBar
        android:id="@+id/webProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:progressTint="@color/colorPrimaryDark"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/webProgress">
        <LinearLayout
            android:id="@+id/infomationView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Please enter url or keyword to search video"
                android:paddingTop="24dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        </WebView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnDownload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="36dp"
            android:clickable="true"
            android:src="@drawable/ic_file_download_white_24dp"
            app:backgroundTint="@color/colorPrimary"
            app:elevation="4dp"
            app:fabSize="normal"
            />

    </RelativeLayout>

</LinearLayout>
